<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6">
      <!-- This div is centered and takes 6 columns -->
      <h1>tweets index</h1>

      <ul>
        <% @tweets.each do |tweet| %>
          <li><%= link_to user_tweet_path(current_user, tweet) do %><%= tweet.content %> <% end %></li>
          <li><%= tweet.user.username %></li>
          <li><%= tweet.user.name %></li>
          <li><%= tweet.location %></li>
        <% end %>
      </ul>
      </ul>
    </div>
  </div>
</div>
